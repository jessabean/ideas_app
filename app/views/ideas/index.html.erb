<div class="page-content">
  <header class="page-header">
    <ul class="toolbar">
      <li><%= link_to 'New Idea', new_idea_path %></li>
    </ul>
    
    <h1>Browse Ideas</h1>
  </header>

  <% @ideas.each do |idea| %>

    <div class="idea">
      <%= link_to image_tag(idea.picture), idea, :class => "idea-thumb" %>
      <div class="details">
        <h2><%= link_to idea.name, idea %></h2>
        <p><%= idea.description %></p>
      </div>
      <div class="actions">
        <%= link_to 'Edit', edit_idea_path(idea) %>
        <%= link_to 'Destroy', idea, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </div>
    </div>
  <% end %>

</div>